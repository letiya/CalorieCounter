<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.letiyaha.android.caloriecounter.MainActivity"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_my_profile"
            style="@style/ToolbarText"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/tv_margin_small"
            android:layout_marginLeft="@dimen/tv_margin_small"
            android:layout_marginRight="@dimen/tv_margin_small"
            >

            <ImageView
                android:layout_width="@dimen/iv_small_icon"
                android:layout_height="@dimen/iv_small_icon"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginTop="@dimen/iv_margin_small"
                />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name_owner"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/tv_margin_small"
            android:layout_marginLeft="@dimen/tv_margin_small"
            android:layout_marginRight="@dimen/tv_margin_small"
            >

            <ImageView
                android:layout_width="@dimen/iv_small_icon"
                android:layout_height="@dimen/iv_small_icon"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginTop="@dimen/iv_margin_small"
                />

            <EditText
                android:id="@+id/et_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_dob_owner"
                android:maxLength="10"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/tv_margin_small"
            android:layout_marginLeft="@dimen/tv_margin_small"
            android:layout_marginRight="@dimen/tv_margin_small"
            >

            <EditText
                android:id="@+id/et_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/hint_height_owner"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/tv_margin_small"
            android:layout_marginLeft="@dimen/tv_margin_small"
            android:layout_marginRight="@dimen/tv_margin_small"
            >

            <EditText
                android:id="@+id/et_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/hint_weight_owner"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_my_profile_enxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tv_margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/label_next"
        />

</android.support.constraint.ConstraintLayout>