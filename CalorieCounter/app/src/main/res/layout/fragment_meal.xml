<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_feed_me"
            style="@style/ToolbarText"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ll_margin_small"
        android:layout_marginLeft="@dimen/ll_margin_small"
        android:layout_marginStart="@dimen/ll_margin_small"
        android:layout_marginRight="@dimen/ll_margin_small"
        android:layout_marginEnd="@dimen/ll_margin_small"
        >

        <ImageView
            android:id="@+id/iv_breakfast"
            android:layout_width="@dimen/iv_large_icon"
            android:layout_height="@dimen/iv_large_icon"
            android:layout_marginTop="@dimen/iv_margin_small"
            android:layout_marginRight="@dimen/iv_margin_small"
            android:layout_marginEnd="@dimen/iv_margin_small"
            tools:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/tv_breakfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_margin_small"
            android:layout_gravity="center"
            android:text="@string/label_breakfast"
            android:textSize="@dimen/tv_content_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ll_margin_small"
        android:layout_marginLeft="@dimen/ll_margin_small"
        android:layout_marginStart="@dimen/ll_margin_small"
        android:layout_marginRight="@dimen/ll_margin_small"
        android:layout_marginEnd="@dimen/ll_margin_small"
        >

        <ImageView
            android:id="@+id/iv_lunch"
            android:layout_width="@dimen/iv_large_icon"
            android:layout_height="@dimen/iv_large_icon"
            android:layout_marginTop="@dimen/iv_margin_small"
            android:layout_marginRight="@dimen/iv_margin_small"
            android:layout_marginEnd="@dimen/iv_margin_small"
            tools:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/tv_lunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_margin_small"
            android:layout_gravity="center"
            android:text="@string/label_lunch"
            android:textSize="@dimen/tv_content_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ll_margin_small"
        android:layout_marginLeft="@dimen/ll_margin_small"
        android:layout_marginStart="@dimen/ll_margin_small"
        android:layout_marginRight="@dimen/ll_margin_small"
        android:layout_marginEnd="@dimen/ll_margin_small"
        >

        <ImageView
            android:id="@+id/iv_dinner"
            android:layout_width="@dimen/iv_large_icon"
            android:layout_height="@dimen/iv_large_icon"
            android:layout_marginTop="@dimen/iv_margin_small"
            android:layout_marginRight="@dimen/iv_margin_small"
            android:layout_marginEnd="@dimen/iv_margin_small"
            tools:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/tv_dinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_margin_small"
            android:layout_gravity="center"
            android:text="@string/label_dinner"
            android:textSize="@dimen/tv_content_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ll_margin_small"
        android:layout_marginLeft="@dimen/ll_margin_small"
        android:layout_marginStart="@dimen/ll_margin_small"
        android:layout_marginRight="@dimen/ll_margin_small"
        android:layout_marginEnd="@dimen/ll_margin_small"
        >

        <ImageView
            android:id="@+id/iv_snack"
            android:layout_width="@dimen/iv_large_icon"
            android:layout_height="@dimen/iv_large_icon"
            android:layout_marginTop="@dimen/iv_margin_small"
            android:layout_marginRight="@dimen/iv_margin_small"
            android:layout_marginEnd="@dimen/iv_margin_small"
            tools:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/tv_snack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/iv_margin_small"
            android:layout_gravity="center"
            android:text="@string/label_snack"
            android:textSize="@dimen/tv_content_size"
            />

    </LinearLayout>

</LinearLayout>